{
  "name": "@artie-owlet/node-app-template",
  "version": "0.0.1-dev.0",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "build-tests": "tsc -p test/tsconfig.json",
    "clean": "rm -rf dist/",
    "dev": "tsx src/index.ts",
    "doc": "typedoc",
    "lint": "eslint src/",
    "lint-fix": "eslint --fix src/",
    "postinstall": "husky",
    "postpack": "pinst --enable",
    "prepack": "pinst --disable",
    "start": "node dist/index.js",
    "test": "node --disable-warning=ExperimentalWarning --test --experimental-config-file=test.config.json test/**/*.ts",
    "test-release": "yarn build-tests && yarn test"
  },
  "packageManager": "yarn@4.10.3",
  "devDependencies": {
    "@artie-owlet/chifir": "^2.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@types/node": "^24.3.1",
    "@typescript-eslint/types": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "pinst": "^3.0.0",
    "tsx": "^4.20.5",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
